<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
  crossorigin="anonymous"
  />
  <script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
  ></script>
  <link rel="stylesheet" href="/assets/css/main.css" />
</head>
<body>
  <section class="wrapper">
    <section class="container">
      <header class="header">
        <div class="header__wrapper">
          <h1 class="header__site-name">Umar Al-Forsiy</h1>
          <p class="header__slogan">Islamic evolution center</p>
        </div>
      </header>
      
      <main class="main">
        <div class="main__wrapper">

          <!-- buttons -->
          
          <div class="main-wrapper__buttons">
            <div class="btn-group-vertical">
              <button type="button" class="btn">Groups</button>
            </div>
          </div>
          
          <div class="main-wrapper__center-data">
            <div class="main-wrapper__top">
              <header class="center-data__header">
                <h2 class="center-data-header__title">My Data</h2>
              </header>
              
            </div>
            <div class="main-wrapper__body center-body">
              <div class="center-body__top">
                <div class="center-body__id">
                  <h3>Course</h3>
                </div>
                <div class="center-body__id">
                  <h3>Group</h3>
                </div>
                <div class="center-body__id">
                  <h3>Teacher</h3>
                </div>
                <div class="center-body__id">
                  <h3>Homework</h3>
                </div>
              </div>
              
              <!-- Modal -->
              
              <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      
                      <% if(foundStudentGroup) { %>
                      
                      <div class="mb-3">
                        <h4>Group name: <%= foundStudentGroup.groupName %> </h4>
                        <h4>Description: <%= foundStudentGroup.description %></h4>
                      </div>

                      <% } else {  %>
                        <h4> Homework is not available </h4>
                        <% } %>
                      
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="center-body__list-wrapper">
                <ul class="center-body__list">
                  <% if(isCourseTrue) { %> <% const filteredGroups =
                    allGroups.filter(e => e.courseName == studentCourseName) %>
                    <% for (let group of filteredGroups ) { %>
                      
                      <li class="center-body__item">
                        <h4><%= group.courseName %></h4>
                        <h4><%= group.groupName %></h4>
                        <h4><%= group.teacherName %></h4>
                        <button type="button" class="btn border-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          See homework
                        </button>
                      </li>
                      
                      <% } %> <% } %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </main>
        </section>
      </section>
      
      <script src="/assets/js/script.js"></script>
    </body>
    </html>
    